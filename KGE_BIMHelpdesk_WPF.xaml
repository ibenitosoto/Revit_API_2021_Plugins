<Window x:Class="API_2021_Plugins.KGE_BIMHelpdesk_WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:API_2021_Plugins" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400"
             Title="Kirby Group Engineering BIM Helpdesk Form"
             WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Grid Background="White">
        <Image x:Name="kirbyLogo" Height="121" Margin="134,58,134,0" VerticalAlignment="Top" Source="/API_2021_Plugins;component/images/kirbyLogoK.png" HorizontalAlignment="Center"/>
        <TextBlock x:Name="pipeMetersTxt" HorizontalAlignment="Center" Text="BIM HELPDESK" FontFamily="Myanmar Text" FontSize="36" Foreground="#FF0F258A" Margin="0,212,0,0" FontWeight="Bold" Width="257" VerticalAlignment="Top" Height="48"/>
        <TextBox x:Name="textBoxShort" HorizontalAlignment="Center" Margin="0,331,0,0" TextWrapping="Wrap" Text="Write a short description here" VerticalAlignment="Top" Width="296" Height="37" Background="#FFEFF1FD" BorderBrush="{x:Null}" FontFamily="Myanmar Text" FontSize="18" TextAlignment="Left" Foreground="#FFA0A6C6" FontStretch="SemiCondensed" ScrollViewer.CanContentScroll="True" HorizontalContentAlignment="Center" Padding="5,5,5,5"/>
        <TextBox x:Name="textBoxLong" HorizontalAlignment="Center" Margin="0,400,0,0" TextWrapping="Wrap" Text="Write a long description here" VerticalAlignment="Top" Width="296" Height="266" Background="#FFEFF1FD" BorderBrush="{x:Null}" FontFamily="Myanmar Text" FontSize="18" TextAlignment="Left" Foreground="#FFA0A6C6" FontStretch="SemiCondensed" ScrollViewer.CanContentScroll="True" HorizontalContentAlignment="Center" Padding="5,5,5,5"/>
        <Button x:Name="buttonSubmit" Content="SUBMIT" HorizontalAlignment="Center" Margin="0,711,0,0" VerticalAlignment="Top" Height="44" Width="296" BorderBrush="{x:Null}" Background="#FF0E1D79" FontFamily="Myanmar Text" Foreground="White" FontSize="23" FontWeight="Bold" Padding="5,5,5,5"/>

    </Grid>
</Window>
